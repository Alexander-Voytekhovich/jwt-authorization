{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
  },
	"parser": "babel-eslint",
	"parserOptions": {
			"ecmaVersion": 6,
			"sourceType": "module",
			"ecmaFeatures": {
					"modules": true,
					"experimentalObjectRestSpread": true
			}
	},
	"root": true,
	"rules": {
		"semi": "warn",
		"no-multi-spaces": "warn",
		"indent": ["warn", 2],
		"no-multiple-empty-lines": "warn",
		"eol-last": "warn",
		"no-unused-vars": "off"
	},
	"extends": [
		"eslint:recommended"
	],
	"ignorePatterns": ["node_modules/", "dist/"]
}
